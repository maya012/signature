<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sort by"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="#ffffff"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sortRGrp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name (A-Z)"
                    android:id="@+id/fNameRBtnAsc" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name (Z-A)"
                    android:id="@+id/fNameRBtnDesc" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name (A-Z)"
                    android:id="@+id/lNameRBtnAsc" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name (Z-A)"
                    android:id="@+id/lNameRBtnDesc" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date (Oldest)"
                    android:id="@+id/dateRBtnAsc" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date (Newest)"
                    android:id="@+id/dateRBtnDesc" />
            </RadioGroup>
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/sortOKBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ok"
                android:textAllCaps="true"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>